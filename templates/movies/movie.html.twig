{% extends 'base.html.twig' %}

{% block title %}Ciné Passion{% endblock %}


{% block body %}


<div class="container mt-4 mb-1">
  <div class="jumbotron">
    <h1 class="display-4 title">{{ movie.name }}!</h1>
    <p class="lead">{{ movie.description }}</p>
    <hr class="my-4">
      De : <a href="{{ path('author', { id: movie.author.id }) }}" style="font-weight:bold">{{ movie.author.name }}</a>
      <div style="font-weight:bold" class="realisateur">
        Du même réalisateur : <br>
    </div>
    <div class="row">
      {% for movieAuthor in movie.author.movies %}
      <div class="col-md-3 mt-4">
        <a href="{{ path('movie', { id: movieAuthor.id }) }}">
          <img src="{{movieAuthor.cover}}" alt="couverture films" width="100%">
        </a>
      </div>
      {% endfor %}
    </div>
    <p class="lead mt-3 mb-1">
      <a class="btn btn-info btn-lg mb-3 mb-1" href="{{ movie.link }}">Lien Allociné</a>
    </p>
  </div>

{% endblock %}
